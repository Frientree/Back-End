<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="340dp"
    android:background="@color/white"
    tools:context=".main.fragments.dialogs.FruitCreationLoadingFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fruit_lottie_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/loading_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1.5"
        app:lottie_rawRes="@raw/lottie_fruit_loading" />

    <TextView
        android:id="@+id/loading_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/loading_text"
        style="@style/Base.FTR.Bold_20sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
