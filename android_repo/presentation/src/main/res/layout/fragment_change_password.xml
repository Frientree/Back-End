<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.d101.presentation.welcome.viewmodel.ChangePasswordViewModel" />

        <variable
            name="lifecycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".welcome.fragments.ChangePasswordFragment">

        <TextView
            android:id="@+id/password_change_title_text_view"
            style="@style/Base.FTR.TextView.WelcomeTitle"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/find_password"
            app:layout_constraintBottom_toTopOf="@id/now_password_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.d101.presentation.welcome.layout.FrientreeInputLayout
            android:id="@+id/now_password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toTopOf="@id/new_password_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_change_title_text_view"
            bind:lifecycleOwner="@{lifecycleOwner}"
            bind:text="@{viewModel.nowPassword}" />

        <com.d101.presentation.welcome.layout.FrientreeInputLayout
            android:id="@+id/new_password_input_layout"
            app:layout_constraintTop_toBottomOf="@id/now_password_input_layout"
            app:layout_constraintBottom_toTopOf="@id/confirm_password_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:lifecycleOwner="@{lifecycleOwner}"
            bind:text="@{viewModel.newPassword}" />

        <com.d101.presentation.welcome.layout.FrientreeInputLayout
            android:id="@+id/confirm_password_input_layout"
            app:layout_constraintTop_toBottomOf="@id/new_password_input_layout"
            app:layout_constraintBottom_toTopOf="@id/confirm_password_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:lifecycleOwner="@{lifecycleOwner}"
            bind:text="@{viewModel.confirmPassword}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
