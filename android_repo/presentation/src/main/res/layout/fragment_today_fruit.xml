<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.d101.presentation.main.viewmodel.MainFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        tools:context=".main.fragments.dialogs.TodayFruitFragment">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/fruit_detail_background_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:rotation="90"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/fruit_image_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:imageUrl="@{viewModel.todayFruit.imageUrl}"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    style="@style/Base.FTR.Bold_20sp"
                    android:gravity="center"
                    android:id="@+id/fruit_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="30sp"
                    android:text="@{viewModel.todayFruit.name}"
                    tools:text="신나는 레몬"
                    app:layout_constraintTop_toBottomOf="@id/fruit_image_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fruit_description_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/fruit_name_text_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="24dp"
                    >
                    <TextView
                        android:id="@+id/fruit_description_text_view"
                        style="@style/Base.FTR.Text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@{viewModel.todayFruit.description}"
                        tools:text="오늘 열매 설명이 들어갑니다." />

                </com.google.android.material.card.MaterialCardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</layout>
